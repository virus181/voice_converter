define NZDigit 
1:one | 
2:two | 
3:three | 
4:four | 
5:five | 
6:six | 
7:seven | 
8:eight | 
9:nine ; 

define Digit [%0 : zero] | NZDigit;

define Number 
NZDigit | 
[[1:0] [
%0:ten | 
1:eleven | 
2:twelve | 
3:thirteen | 
4:fourteen | 
5:fifteen | 
6:sixteen | 
7:seventeen | 
8:eighteen | 
9:nineteen]] | 
[[2:twenty] [%0:0 | NZDigit]] ;

define Plus %+ : plus;
define Minus %- : minus;
define Slash %/ : slash;
define BackSlash %\ : back slash;
define Star %* : star;
define Dot %. : dot;
define SpecialChar Plus | Minus | Slash | BackSlash | Star | Dot;

define Enter {enter} : enter;

define OtherKey 
{underscore} : underscore | 
{double-quote} : quote | 
{alt} : alt | 
{control} : control | 
{hyper} : hyper | 
{meta} : meta | 
{shift} : shift | 
{super} : super | 
{backspace} : [back space] | 
{break} : break | 
{delete} : delete | 
{down} : down | 
{end} : end | 
Enter | 
{escape} : escape | 
{home} : home | 
{insert} : insert | 
{left} : left | 
{menu} : menu | 
{next} : next | 
{num-lock} : [num lock] | 
{pause} : pause | 
{print} : print | 
{prior} : prior | 
{return} : return | 
{right} : right | 
{scroll-lock} : [scroll lock] | 
{space} : space | 
{tab} : tab | 
{up} : up | 
{window} : windows ; 

define KPKey 
[{kp-} : 0] [Digit | Plus | Minus | Star | Slash | Dot | Enter];

define FKey 
f:ef Number ;

define Key 
KPKey | FKey | SpecialChar | OtherKey;

regex Key;
