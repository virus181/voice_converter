define FunctionWord Conjunction | Postposition | Particle  | ModalWord ; 

define FunctionWordMapping 
[[? & Postposition] : post] .P. 
[[? & Conjunction] : conj] .P. 
[[? & Particle] : part] .P. 
[[? & ModalWord] : mod] ; 

define WordMapping 
FunctionWordMapping .P. [\FunctionWord : content] ; 

