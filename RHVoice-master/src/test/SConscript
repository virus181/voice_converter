import os.path

Import("env")
local_env=env.Clone()
local_env.Prepend(LIBS=[local_env["libcore"],local_env["libaudio"]])

test=local_env.Program("RHVoice-test","test.cpp")
if local_env["PLATFORM"]!="win32":
    local_env.InstallProgram(test)
